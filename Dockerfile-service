FROM python:3.6
ENV PYTHONUNBUFFERED 1
ENV JAVA_HOME /usr/lib/jvm/java-7-openjdk-amd64
WORKDIR /usr/src/app
COPY service_python ./
RUN apt-get update && apt-get install -y \
	openjdk-8-jre
RUN pip install -U pip
RUN pip install --no-cache-dir -r requirements.txt
CMD ["python", "-u", "init.py", "prod"]
